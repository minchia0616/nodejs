<div class="container">
    <div class="row">
        <div class="col-lg-6">
            <h3>新增會員資料</h3>
            <form name="form1" onsubmit="sendForm(event)">
                <div class="mb-3">
                    <label for="" class="form-label"
                        >name</label
                    >
                    <input
                        type="text"
                        class="form-control"
                        name="member_name"
                    />
                    <div class="form-text"></div>
                </div>
                <div class="mb-3">
                    <label for="" class="form-label"
                        >nickname</label
                    >
                    <input
                        type="text"
                        class="form-control"
                        name="member_nickname"
                    />
                    <div class="form-text"></div>
                </div>
                <div class="mb-3">
                    <label for="" class="form-label"
                        >birthday</label
                    >
                    <input
                        type="date"
                        class="form-control"
                        name="member_birthday"
                    />
                    <div class="form-text"></div>
                </div>
                <div class="mb-3">
                    <label for="" class="form-label"
                        >mobile</label
                    >
                    <input
                        type="text"
                        class="form-control"
                        name="member_mobile"
                    />
                    <div class="form-text"></div>
                </div>
                <div class="mb-3">
                    <label for="" class="form-label"
                        >address</label
                    >
                    <input
                        type="text"
                        class="form-control"
                        name="member_address"
                    />
                    <div class="form-text"></div>
                </div>
                <div class="mb-3">
                    <label for="" class="form-label"
                        >email</label
                    >
                    <input
                        type="text"
                        class="form-control"
                        name="member_mail"
                    />
                    <div class="form-text"></div>
                </div>

                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>

