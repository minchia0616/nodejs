<%- include('../parts/html-head') %>
<%- include('../parts/navbar') %>

<div class="container">

    <div class="row">
        <div class="col">
            <form class="d-flex">
                <input class="form-control" type="date" placeholder="生日起始" name="beginDate" value="<%= query.beginDate ? query.beginDate : '1980-01-01' %>" >
                <input class="form-control" type="date" placeholder="生日結束" name="endDate"  value="<%= query.endDate ? query.endDate : '2000-01-01' %>" >
                <input
                    class="form-control me-2"
                    type="search"
                    placeholder="Search"
                    name="search"
                    value="<%= locals.query && query.search ? query.search : '' %>"
                />
                <button class="btn btn-outline-success" type="submit">
                    Search
                </button>
            </form>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <nav aria-label="Page navigation example">
                <ul class="pagination">
                    <li class="page-item">
                        <a class="page-link" href="#">Previous</a>
                    </li>

                    <% for(let i=page-1; i<=page+1; i++) if(i>=1 &&i<=totalPages){
                        
                        const obj = {page: i};

                        if(query.search){
                            obj.search = query.search;
                        }
                        if(query.beginDate){
                            obj.beginDate = query.beginDate;
                        }
                        if(query.endDate){
                            obj.endDate = query.endDate;
                        }

                        const myLink = new URLSearchParams(obj).toString();

                        %>

                    <li class="page-item <%= page===i ? 'active' : '' %>">
                        <a class="page-link" href="?<%= myLink %>"><%= i %></a>
                    </li>

                    <% } %>

                    <li class="page-item">
                        <a class="page-link" href="#">Next</a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Name</th>
                        <th scope="col">Nickname</th>
                        <th scope="col">Birthday</th>
                        <th scope="col">Mobile</th>
                        <th scope="col">Address</th>
                    </tr>
                </thead>
                <tbody>
                    <% for(let i of rows){ %>
                    <tr>
                        <td><%= i.member_sid %></td>
                        <td><%= i.member_name %></td>
                        <td><%= i.member_nickname %></td>
                        <td><%= i.member_birthday%></td>
                        <td><%= i.member_mobile %></td>
                        <td><%= i.member_address %></td>
                    </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<%- include('../parts/scripts') %>
<%- include('../parts/html-foot') %>
